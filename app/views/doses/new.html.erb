<h1 class="container">Add a new Dose</h1>

<div class="container">
  <%= simple_form_for([@cocktail, @dose]) do |f| %>
    <% if @dose.errors.any? %>
      <div class="errors-container">
        <ul>
          <% @dose.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="container">
      <%= f.input :description, label: false, placeholder: 'Description' %>
      <%= f.input :ingredient_id, collection: Ingredient.all %>
      <%= f.submit class: "btn btn-primary"%>
    </div>
  <% end %>
</div>

<br>

<div class="container">
  <%= link_to "Back", cocktail_path(@cocktail) %>
</div>
